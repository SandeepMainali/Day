
@model List<Day2.Models.employee_salary_details>
@{
    ViewBag.Title = "Index";
    int Sn = 0;
}

<h2>Welcome back</h2>
<h3>Employee Record Details</h3>
<br>

<table class=" table" border="1" style="background-color:aqua">
    <tr>
        <th>Sn</th>
        <th>Employe name</th>
        <th>Salary Amount</th>
        <th>Paid Date</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    @foreach (var data in Model)
    {
        <tr>
            <td>@(++Sn)</td>
            <td>@(data.id)</td>
            <td>@(data.salary_paid)</td>
            <td>@(data.paid_date )</td>
            <td> <a href="@Url.Action("Edit", new {id=data.id })">Edit</a></td>
            <td> <a href="@Url.Action("deletedata", new {id=data.id })">Delete</a></td>

        </tr>
    }
</table>
<a href="@Url.Action("Create") ">Add a New Record</a>