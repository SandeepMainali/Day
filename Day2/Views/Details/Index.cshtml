
@model List<Day2.Models.employee_salary_details>
@{
    ViewBag.Title = "Index";
    int Sn = 0;
}

<h2>Welcome back</h2>
<h3>Employee Record Details</h3>
<br>

@using (Html.BeginForm("Index", null, FormMethod.Post))
{
<label>From</label>
<input type="date" name="dte" class="date" />
<label>To</label>
<input type="date" name="date" class="date" />
<input type="submit" value="search" class="button" />
 <br /> <br />
<table class=" table" border="1" style="background-color:aqua">
    <tr>
        <th>Sn</th>
        <th>Id</th>
        <th>Ename</th>
        <th>EContact</th>
        <th>Salary Amount</th>
        <th>Paid Date</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    @foreach (var data in Model)
    {
        <tr>
            <td>@(++Sn)</td>
            <td>@(data.id)</td>
            <td>@(data.employee.Ename)</td>
            <td>@(data.employee.EContact)</td>

            <td>@(data.salary_paid)</td>
            <td>@(data.paid_date )</td>
            <td> <a href="@Url.Action("Edit", new { id = data.id })">Edit</a></td>
            <td> <a href="@Url.Action("deletedata", new { id = data.id })">Delete</a></td>

        </tr>
    }
    <tr>
        <td>Total Salary_Paid</td>
        <td colspan="6">@(Model.Sum(x => x.salary_paid))</td>
    </tr>


</table>
}
<a href="@Url.Action("Create") ">Add a New Record</a>